{
	"extends": "@sindresorhus/tsconfig",
	"compilerOptions": {
		"esModuleInterop": true,
		"moduleResolution": "node16",
		"module": "node16",
		"outDir": "build",
		"sourceMap": true,
		"jsx": "react"
	},
	"include": ["src"],
	"ts-node": {
		"transpileOnly": true,
		"files": true,
		"experimentalResolver": true,
		"experimentalSpecifierResolution": "node"
	}
}
